<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin_8dp"
    android:paddingLeft="@dimen/activity_horizontal_margin_8dp"
    android:paddingRight="@dimen/activity_horizontal_margin_8dp"
    android:paddingTop="@dimen/activity_vertical_margin_8dp"
    tools:context="com.danielcswain.nearbychat.ChatActivity">

    <TextView
        android:id="@+id/chat_channel_topic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_title"
        android:textAlignment="center"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/messages_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/chat_channel_topic"
        android:layout_marginTop="@dimen/activity_vertical_margin_8dp"
        android:scrollbars="none"
        android:layout_above="@+id/text_entry_container"
        />

    <LinearLayout
        android:id="@+id/text_entry_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/text_entry_field"
            android:layout_width="0dp"
            android:layout_height="@dimen/activity_vertical_margin_48dp"
            android:layout_gravity="bottom"
            android:layout_weight="1"/>

        <ImageButton
            android:id="@+id/message_send_button"
            android:layout_width="@dimen/button_circular_40dp"
            android:layout_height="@dimen/button_circular_40dp"
            android:src="@drawable/ic_send_light"
            android:background="@drawable/bg_button_circle"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>

</RelativeLayout>
