<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/messageTextField"
    tools:context="com.danielcswain.nearbychat.ChatActivity">

    <HorizontalScrollView
        android:id="@+id/chat_users_scoll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/chat_users_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/activity_horizontal_margin_8dp"
            android:paddingBottom="@dimen/activity_vertical_margin_8dp"
            android:paddingLeft="@dimen/activity_horizontal_margin_8dp"
            android:paddingRight="@dimen/activity_horizontal_margin_8dp"
            />

    </HorizontalScrollView>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/messages_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/chat_users_scoll_view"
        android:layout_marginTop="@dimen/activity_vertical_margin_8dp"
        android:paddingBottom="@dimen/activity_vertical_margin_8dp"
        android:paddingLeft="@dimen/activity_horizontal_margin_8dp"
        android:paddingRight="@dimen/activity_horizontal_margin_8dp"
        android:scrollbars="none"
        android:layout_above="@+id/text_entry_container"
        />

    <LinearLayout
        android:id="@+id/text_entry_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingTop="@dimen/activity_vertical_margin_8dp"
        android:paddingBottom="@dimen/activity_vertical_margin_8dp"
        android:paddingLeft="@dimen/activity_horizontal_margin_8dp"
        android:paddingRight="@dimen/activity_horizontal_margin_8dp"
        android:background="@color/md_white"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/text_entry_field"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:inputType="textCapSentences|textMultiLine"
            android:maxLines="4"
            android:gravity="top|left"
            android:hint="@string/message_text_entry_field_hint"
            />

        <ImageButton
            android:id="@+id/message_send_button"
            android:layout_width="@dimen/button_circular_40dp"
            android:layout_height="@dimen/button_circular_40dp"
            android:src="@drawable/ic_send_light"
            android:background="@drawable/bg_button_circle"
            android:layout_gravity="center_vertical"
            android:contentDescription="@string/message_send_button_description"
            />
    </LinearLayout>

</RelativeLayout>
